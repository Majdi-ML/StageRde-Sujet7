{% extends 'baseback.html.twig' %}


{% block body %}
<div class="pagetitle">
      <h1 class="pagetitle"> Les postes </h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div>
    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Competence</th>
               <th>Expérience</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Cible</th>
                <th>Entreprise</th>
                <th>Déscription</th>
               
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titre }}</td>
                <td>{{ post.type }}</td>
                <td>{{ post.competence }}</td>
                <td>{{ post.getNiveauEtude()}}</td>
                <td>{{ post.getDateDebut() ? post.getDateDebut()|date('Y-m-d') : ''  }}</td>
                <td>{{ post.getDateFin() ? post.getDateFin()|date('Y-m-d') : ''  }}</td>
                <td>{{ post.cible }}</td>
                <td>{{ post.entreprise }}</td>
                <td>{{ post.description }}</td>
                
                <td>
                    <a class="btn btn btn-info" href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class = "btn btn-success" href="{{ path('app_post_new') }}">Create new post</a>
{% endblock %}
